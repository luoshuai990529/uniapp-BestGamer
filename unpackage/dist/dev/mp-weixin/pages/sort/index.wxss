.sort {
  position: relative;
}
.sort .operator-mask {
  position: absolute;
  z-index: 98;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #555555;
  opacity: 0;
}
.sort .content {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}
